<div class="size-<%= locals.size %>">
  <style>
    .article,
    .square-article {
      background-color: <%= locals.backgroundColor %>;
    }
  </style>
  <% if (['xxl', 'xl', 'l', 'm'].includes(locals.size)) { %>
  <div class="article <% if (locals.isDarkTheme) { %>theme-dark<% } %>">
    <div class="article__cover-wrapper">
      <img
        class="article__cover"
        src="<%= imagesPath %>/mock/covers/<% if(locals.isBrandArticle){ %>brand<% } else{ %>article<% } %>-vertical.png"
        alt="Тут павінна быць вокладка артыкула"
      />
    </div>
    <% if (locals.isBrandArticle) { %>
      <img
        class="article__brand"
        src="<%= imagesPath %>/mock/brands/art-museum.png"
        alt="Лагатып партнёра"
      />
    <% } %>
    <div class="article__content">
      <div>
        <div class="article__title"><%= locals.title %></div>
        <div class="article__author"><%= locals.author %></div>
      </div>
      <div class="article__content-bottom">
        <span class="article__description"><%= locals.description %></span>
        <span class="article__read <% if (locals.isDarkTheme) { %>theme-dark<% } %>"
          >Чытаць<% if (locals.size === 'm') { %> артыкул<% } %></span
        >
      </div>
    </div>
  </div>
  <% } %> <% if (['square-m', 'square-s'].includes(locals.size)) { %>
  <div class="square-article <% if (locals.isDarkTheme) { %>theme-dark<% } %>">
    <div class="square-article__cover-wrapper">
      <img
        class="square-article__cover"
        src="<%= imagesPath %>/mock/covers/<% if(locals.isBrandArticle){ %>brand<% } else{ %>article<% } %>-horizontal.png"
        alt="Тут павінна быць вокладка артыкула"
      />
    </div>
    <% if (locals.isBrandArticle) { %>
      <img
        class="square-article__brand"
        src="<%= imagesPath %>/mock/brands/art-museum.png"
        alt="Лагатып партнёра"
      />
    <% } %>
    <div class="square-article__content">
      <div class="square-article__title"><%= locals.title %></div>
      <div class="square-article__author"><%= locals.author %></div>
    </div>
  </div>
  <% } %>
</div>
