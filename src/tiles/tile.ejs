<!-- List of variables used below. This suppresses lint warnings. -->
<% var authorVar; %>
<% var authorPhotoVar; %>
<% var photoClassVar; %>
<% var photoVar; %>
<% var specialHeadingHandmadeVar; %>
<% var specialHeadingNameVar; %>
<% var specialHeadingPhotoVar; %>
<% var subtitleVar; %>
<% var titleVar; %>
<% var isUnpublished; %>
<% var isVideoArticle; %>
<% var isDraft; %>

<div class="tile is-parent">
  <article class="card tile is-child is-flex <% if (isUnpublished) { %> with-opacity <% } %>" <% if (isUnpublished) { %> title="Гэты артыкул яшчэ не апублікаваны"
    <% } %> >
    <div class="card-image">
      <figure class="image <%= photoClassVar %>">
        <img src="<%= imagesPath %>/<%= photoVar %>" />
      </figure>
      <% if (specialHeadingNameVar) { %>
      <div class="media special-heading is-pulled-right">
        <div class="media-left">
          <% if (specialHeadingHandmadeVar) { %>
          <div class="media-left">
            <div class="handmade">
              <%= specialHeadingHandmadeVar %>
            </div>
          </div>
          <% } else { %>
          <figure class="image is-32x32">
            <img src="<%= imagesPath %>/<%= specialHeadingPhotoVar %>" />
          </figure>
          <% } %>
        </div>
        <div class="media-content">
          <span class="subtitle is-6">
            <%= specialHeadingNameVar %></span>
        </div>
      </div>
      <% } %>
      <div class="actions"><i class="fa fa-pencil fa-lg"></i></div>
      <% if (isVideoArticle) { %>
      <a href="../article-page/article-page.html" class="video-article"><i class="fa fa-play"></i></a>
      <% } %>
    </div>
    <div class="card-content is-video-article ">
      <span class="title">
        <a href="../article-page/article-page.html">
          <%= titleVar %></a>
      </span>
      <p class="subtitle">
        <%= subtitleVar %>
      </p>
      <div class="level tile-footer is-mobile">
        <div class="level-left">
          <% if (authorVar) { %>
          <img src="<%= imagesPath %>/<%= authorPhotoVar %>" />
          <div class="author-name">
            <span>
              <%= authorVar %></span>
          </div>
          <% } %>
        </div>
        <% if (isUnpublished) { %>
        <% if (isDraft) { %>
        <div class="level-right publication-not-scheduled">Публікацыя не запланавана</div>
        <% } else { %>
        <div class="level-right publication-scheduled">праз 3 дні</div>
        <% } %>
        <% } %>
      </div>
    </div>
  </article>
</div>
